        {{/each}}
    </ol>

    <ol class="attributes-list">
        <li class="attributes-header flexrow">
        <span class="attribute-key">{{ localize "MTA.Skill" }}</span>
        <span class="attribute-valueHeader">{{ localize "MTA.Value" }}</span>
        </li>
        {{#each config.skills_social as |cvalue ckey|}}
            {{{rollableInput ../actor "skills_social" ckey}}}
                {{#if (eq ckey "craft_1")}} 
                    <input type="text" name="system.skills_social.customSkillName_1" 
                           value="{{../actor.system.skills_social.customSkillName_1}}" 
                           placeholder="{{''}}">
                {{/if}}
                    {{#if (eq ckey "craft_2")}} 
                    <input type="text" name="system.skills_social.customSkillName_2" 
