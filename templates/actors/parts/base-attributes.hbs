        {{/each}}
    </ol>
    </div>

    <div class="kInput statBox">
        <h4> {{ localize "MTA.EpicAttributes" }}</h4>
        <div class="gold-border"> </div>
        <div class="armourGrid">
          {{#each config.epic_attributes as |cvalue ckey|}}
          {{#with (lookup ../system.epic_attributes ckey)}}
            <span>
              <label class="button attribute-button" for="{{cvalue}}{{../../actor.id}}">{{localize cvalue}}</label>
            </span>
            <div class="niceNumber digits2" >
              <input name="system.epic_attributes.{{ckey}}.value" type="text" placeholder="0" data-dtype="Number" onchange="Number(this.value);" value="{{numberFormat value decimals=0 sign=true}}">
              <div class="numBtns">
                <div class="plusBtn">+</div>
                <div class="minusBtn">âˆ’</div>
              </div>
            </div>
          {{/with}}
          {{/each}}
    </div>
    </div>
</div>