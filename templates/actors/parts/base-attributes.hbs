        {{/each}}
    </ol>

    <ol class="attributes-list">
        <li class="attributes-header flexrow">
        <span class="attribute-key">{{ localize "MTA.Skill" }}</span>
        <span class="attribute-valueHeader">{{ localize "MTA.Value" }}</span>
        </li>
        {{#each config.skills_mental as |cvalue ckey|}}
            {{{rollableInput ../actor "skills_mental" ckey}}}
                {{#if (eq ckey "science_1")}} 
                    <input type="text" name="system.skills_mental.customSkillName_1" 
                           value="{{../actor.system.skills_mental.customSkillName_1}}" 
                           placeholder="{{''}}">
                {{/if}}
                    {{#if (eq ckey "science_2")}} 
                    <input type="text" name="system.skills_mental.customSkillName_2" 
